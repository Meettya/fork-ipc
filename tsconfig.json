{
  "extends": "@tsconfig/node12/tsconfig.json",
  "compileOnSave": true,
  "compilerOptions": {
    "declaration": true,
    "baseUrl": "./",
    "outDir": "dist",
    "paths": {
      "@/*": ["src/*"],
      "@Lib/*": ["src/lib/*"],
      "@Types/*": ["src/types/*"]
    }
  },
  "include": ["src/**/*"]
}
